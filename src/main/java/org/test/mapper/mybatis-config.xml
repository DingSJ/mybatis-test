<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <!-- 标签有顺序 -->

    <!-- 1. 属性值 -->
    <properties resource="org/test/mapper/myprop.prop">
        <property name="P_aa" value="V_aaaa"/>
        <property name="P_bb" value="V_bbb"/>
        <property name="P_cc" value="V_ccc"/>
        <property name="driver" value="com.mysql.cj.jdbc.Driver"/>
    </properties>

    <!-- 2. 设置参数 -->
    <settings>
        <setting name="logImpl" value="STDOUT_LOGGING" />
    </settings>

    <!-- 3. 类型命名 -->
    <typeAliases>
        <typeAlias type="org.test.a_test.User" alias="User"/>
        <package name="org.test.a_test"></package>
    </typeAliases>

    <!-- 4. 类型处理器 -->
    <typeHandlers>
        <!--<package name="" />-->
        <typeHandler handler="org.test.a_test.MyStringTypeHandler" javaType="String" jdbcType="VARCHAR" />
    </typeHandlers>

    <!-- 5. 对象工厂 -->

    <!-- 6. 插件 -->
<!--    <plugins>
        <plugin interceptor=""></plugin>
    </plugins>-->

    <!-- 7. 环境配置 -->
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="jdbc:mysql://localhost:3307/mytestdb?useUnicode=true&amp;characterEncoding=UTF8&amp;autoReconnect=true&amp;serverTimezone=GMT%2B8"/>
                <property name="username" value="root"/>
                <property name="password" value="root"/>
            </dataSource>
        </environment>

        <environment id="prod">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.cj.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://localhost:3307/mytestdb?useUnicode=true&amp;characterEncoding=UTF8&amp;autoReconnect=true&amp;serverTimezone=GMT%2B8"/>
                <property name="username" value="root"/>
                <property name="password" value="root"/>
                <property name="poolPingEnabled" value="true"/>
                <property name="poolPingQuery" value="SELECT 1 from DUAL"/>
            </dataSource>
        </environment>
    </environments>



    <!-- 8. 数据库厂商标识-->
    <databaseIdProvider type="DB_VENDOR">
        <property name="MySQL" value="mysql"></property>
        <property name="Oracle" value="oracle"></property>
    </databaseIdProvider>

    <!-- 9. 映射器 -->
    <mappers>
        <!--<package name="org.test.mapper"/>-->
        <mapper resource="org/test/mapper/UserMapper.xml"/>
    </mappers>

</configuration>